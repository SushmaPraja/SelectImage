<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:id="@+id/btnClick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Click"
        />

    <ImageView
        android:id="@+id/imgView1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/btnClick"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/bird" />

    <ImageView
        android:id="@+id/imgView2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/btnClick"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imgView1"
        android:layout_toRightOf="@+id/imgView1"
        android:visibility="invisible"
        app:srcCompat="@drawable/cat" />

    <ImageView
        android:id="@+id/imgView3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imgView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/imgView4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imgView2"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imgView3"
        android:layout_toRightOf="@+id/imgView3"
        android:visibility="invisible"
        app:srcCompat="@drawable/giraffe" />


</RelativeLayout>